{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "./build",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "exactOptionalPropertyTypes": true,
    "removeComments": true,
    "sourceMap": true
  },
  "include": ["src/**/*.ts", "__tests__"],
  "exclude": ["node_modules", "build", "coverage"]
}
